# HE-Graph-Embeddings Environment Configuration

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.9
CUDA_LAUNCH_BLOCKING=0

# CKKS Parameters
POLY_MODULUS_DEGREE=32768
SCALE_BITS=40
SECURITY_LEVEL=128
BOOTSTRAP_THRESHOLD=10

# Performance Settings
BATCH_SIZE=1024
NUM_WORKERS=4
PREFETCH_FACTOR=2
PIN_MEMORY=1

# Database Configuration (for graph storage)
DATABASE_URL=postgresql://user:password@localhost:5432/he_graph_db
REDIS_URL=redis://localhost:6379/0
MONGODB_URI=mongodb://localhost:27017/he_graph

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=0
API_WORKERS=4

# Monitoring
ENABLE_METRICS=1
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_metrics
ENABLE_PROFILING=0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/he_graph/app.log
ENABLE_STRUCTURED_LOGGING=1

# Security
JWT_SECRET_KEY=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600
ENABLE_RATE_LIMITING=1
RATE_LIMIT_PER_MINUTE=60

# External Services
GITHUB_TOKEN=
SLACK_WEBHOOK_URL=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com

# Weights & Biases (for experiment tracking)
WANDB_API_KEY=
WANDB_PROJECT=he-graph-embeddings
WANDB_ENTITY=

# Feature Flags
ENABLE_BOOTSTRAPPING=0
ENABLE_MULTI_GPU=0
ENABLE_DISTRIBUTED=0
ENABLE_MIXED_PRECISION=0

# Cache Settings
CACHE_ENABLED=1
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Development
DEV_MODE=0
HOT_RELOAD=0
MOCK_ENCRYPTION=0
DISABLE_GPU=0

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/he_graph_test
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_WORKERS=auto

# Paths
DATA_DIR=/data/he_graph
MODEL_DIR=/models/he_graph
LOG_DIR=/logs/he_graph
CHECKPOINT_DIR=/checkpoints/he_graph